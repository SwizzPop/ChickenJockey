<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\FrameXML\UI.xsd">

    <Script file="ChickenJockey.lua" />
    
    <!-- Main ChickenJockey Frame -->
    <Frame name="ChickenJockeyFrame" parent="UIParent" hidden="true" enableMouse="true" toplevel="true" movable="true">
        <Size>
            <AbsDimension x="400" y="420" />
        </Size>
    <Anchors>
            <Anchor point="CENTER" />
    </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
      </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
    </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <!-- Title -->
                <FontString name="ChickenJockeyTitle" inherits="GameFontHighlight" text="Chicken Jockey">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="16" y="-16" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                
                <!-- Instructions -->
                <FontString name="ChickenJockeyInstructions1" inherits="GameFontDisableSmall" text="Enter item ID and click Fetch, or use Random to find items.">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="16" y="-36" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="ChickenJockeyInstructions2" inherits="GameFontDisableSmall" text="Example: https://database.turtlecraft.gg/?item=11944, item ID is 11944">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="16" y="-50" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="ChickenJockeyInstructions2" inherits="GameFontDisableSmall" text="Edit name and quality, then Create Link.">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="16" y="-64" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <!-- Close Button -->
    <Button name="ChickenJockeyCloseButton" inherits="UIPanelCloseButton">
      <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="-8" />
                        </Offset>
                    </Anchor>
      </Anchors>
    </Button>

            <!-- Item Number Label -->
            <FontString name="ChickenJockeyItemNumberLabel" inherits="GameFontNormal" text="ItemId:">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-70" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <!-- Item Number Input -->
            <EditBox name="ChickenJockeyItemNumber" inherits="InputBoxTemplate" autoFocus="false" numeric="true">
                <Size>
                    <AbsDimension x="120" y="20" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-90" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnEnterPressed>
                        ChickenJockeyItemNumber:ClearFocus()
                    </OnEnterPressed>
                    <OnEscapePressed>
                        ChickenJockeyItemNumber:ClearFocus()
                    </OnEscapePressed>
                </Scripts>
    </EditBox>

            <!-- Fetch Button -->
            <Button name="ChickenJockeyFetchButton" inherits="UIPanelButtonTemplate" text="Fetch">
                <Size>
                    <AbsDimension x="80" y="24" />
                </Size>
      <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ChickenJockeyItemNumber" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="10" y="0" />
                        </Offset>
                    </Anchor>
      </Anchors>
                <Scripts>
                    <OnClick>
                        ChickenJockey_FetchItem()
                    </OnClick>
                </Scripts>
    </Button>

            <!-- Random Button -->
            <Button name="ChickenJockeyRandomButton" inherits="UIPanelButtonTemplate" text="Random">
                <Size>
                    <AbsDimension x="80" y="24" />
                </Size>
      <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ChickenJockeyFetchButton" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="10" y="0" />
                        </Offset>
                    </Anchor>
      </Anchors>
                <Scripts>
                    <OnClick>
                        ChickenJockey_RandomItem()
                    </OnClick>
                </Scripts>
      </Button>
            
            <!-- Item Name Label -->
            <FontString name="ChickenJockeyItemNameLabel" inherits="GameFontNormal" text="Item Name:">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-130" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
            
            <!-- Item Name Input -->
            <EditBox name="ChickenJockeyItemName" inherits="InputBoxTemplate" autoFocus="false">
                <Size>
                    <AbsDimension x="300" y="20" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-150" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnEnterPressed>
                        ChickenJockeyItemName:ClearFocus()
                    </OnEnterPressed>
                    <OnEscapePressed>
                        ChickenJockeyItemName:ClearFocus()
                    </OnEscapePressed>
                </Scripts>
            </EditBox>
            
            <!-- Rarity Color Label -->
            <FontString name="ChickenJockeyColorLabel" inherits="GameFontNormal" text="Item Quality:">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-190" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>
            
            <!-- Rarity Color Radio Buttons -->
            <Frame name="ChickenJockeyColorFrame">
                <Size>
                    <AbsDimension x="350" y="140" />
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-210" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Frames>
                    <!-- Grey -->
                    <CheckButton name="ChickenJockeyColorGrey" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="0" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Poor">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(0)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- White -->
                    <CheckButton name="ChickenJockeyColorWhite" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorGrey" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-5" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Common">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(1)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- Green -->
                    <CheckButton name="ChickenJockeyColorGreen" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorWhite" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-5" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Uncommon">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(2)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- Blue -->
                    <CheckButton name="ChickenJockeyColorBlue" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorGreen" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-5" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Rare">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(3)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- Purple -->
                    <CheckButton name="ChickenJockeyColorPurple" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorFrame" relativePoint="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="120" y="0" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Epic">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(4)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- Orange -->
                    <CheckButton name="ChickenJockeyColorOrange" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorPurple" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-5" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Legendary">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(5)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                    
                    <!-- Red -->
                    <CheckButton name="ChickenJockeyColorRed" inherits="UIRadioButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="ChickenJockeyColorOrange" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-5" />
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer>
                                <FontString name="$parentLabel" inherits="GameFontNormal" text="Artifact">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="5" y="0" />
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnClick>
                                ChickenJockey_SetRarity(6)
                            </OnClick>
                        </Scripts>
                    </CheckButton>
                </Frames>
            </Frame>

            <!-- Status Message -->
            <FontString name="ChickenJockeyStatus" inherits="GameFontHighlightSmall" text="">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-360" />
                        </Offset>
                    </Anchor>
                </Anchors>
            </FontString>

            <!-- Create Link Button -->
            <Button name="ChickenJockeyCreateLinkButton" inherits="UIPanelButtonTemplate" text="Create Link">
                <Size>
                    <AbsDimension x="120" y="32" />
                </Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="ChickenJockeyColorFrame" relativePoint="BOTTOM">
                        <Offset>
                            <AbsDimension x="0" y="-10" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ChickenJockey_CreateLink()
                    </OnClick>
                </Scripts>
    </Button>
        </Frames>
        
        <Scripts>
            <OnLoad>
                ChickenJockey_OnLoad()
            </OnLoad>
            <OnShow>
                ChickenJockey_OnShow()
            </OnShow>
        </Scripts>
  </Frame>
</Ui>
