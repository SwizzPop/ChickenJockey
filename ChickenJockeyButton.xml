<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="ChickenJockeyButton.lua"/>
    <Frame name="ChickenJockeyButtonFrame" parent="Minimap" enableMouse="true" hidden="false" frameStrata="LOW">
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="Minimap" relativePoint="RIGHT">
                <Offset>
                    <AbsDimension x="2" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Frames>
            <Button name="ChickenJockeyButton">
                <Size>
                    <AbsDimension x="32" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <NormalTexture file="Interface\AddOns\ChickenJockey\Skins\icon"/>
                <PushedTexture file="Interface\AddOns\ChickenJockey\Skins\icon"/>
                <HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
                <Scripts>
                    <OnLoad>
                        this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
                    </OnLoad>
                    <OnClick>
                        ChickenJockeyButton_OnClick(arg1);
                        PlaySound("igMainMenuOptionCheckBoxOn");
                    </OnClick>
                    <OnEnter>
                        GameTooltip:SetOwner(this, "ANCHOR_LEFT");
                        GameTooltip:SetText("Chicken Jockey");
                        GameTooltip:AddLine("Left-click to open", 1, 1, 1);
                        GameTooltip:Show();
                    </OnEnter>
                    <OnLeave>
                        GameTooltip:Hide();
                    </OnLeave>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>
                this:RegisterEvent("VARIABLES_LOADED");
                -- Try to show immediately if Minimap is available
                if Minimap then
                    this:Show();
                end
            </OnLoad>
            <OnEvent>
                ChickenJockeyButton_Init();
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>

